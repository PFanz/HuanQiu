/* 上标题下图 */
.mainImg-news-title {
  display: block;
  margin-bottom: 20rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  font-size: 35rpx;
  color: #353535;
  overflow: hidden;
}

.mainImg-news-img {
  width: 100%;
  height: 397.5rpx;
}

.video-block {
  position: relative;
}

.video-block::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .4);
}

.video-news-btn {
  position: absolute;
  top: 161.25rpx;
  left: 337.5rpx;
  padding: 10rpx;
  width: 75rpx;
  height: 75rpx;
  background: rgba(0, 0, 0, .6);
  border-radius: 50%;
  z-index: 111;
}

/* 组图新闻 */
.group-news-title {
  display: block;
  margin-bottom: 20rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  font-size: 35rpx;
  color: #353535;
  overflow: hidden;
}

.imgs-container {
  overflow: hidden;
}

.group-img {
  float: left;
  margin-left: 20rpx;
  width: 220rpx;
  height: 165rpx;
}

.group-img:first-child {
  margin: 0;
}