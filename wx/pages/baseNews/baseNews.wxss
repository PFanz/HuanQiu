@import '../../wxParse/wxParse.wxss';


page {
  box-sizing: border-box;
  padding: 25rpx;
}

.container {
  /*padding: 25rpx;*/
}

.header {
  margin-bottom: 20rpx;
  border-bottom: 1px dotted #888;
}

.title {
  font-size: 45rpx;
  line-height: 1.5;
  font-weight: 900;
}

.info {
  margin: 30rpx 0 20rpx;
  font-size: 25rpx;
  color: #888;
}

.content {
  padding: 20rpx 0;
}

.paragraph {
  padding: 10rpx 0;
  font-size: 35rpx;
  line-height: 1.2;
  text-indent: 2em;
}

.wxParse-p {
  box-sizing: border-box;
  /*padding: .25em 0;*/
  padding: .5em 0;
  /*text-indent: 1.5em;*/
  font-size: 38rpx;
  line-height: 1.5;
  color: #353535;
}

.wxParse-img {
  max-width: 90%;
  display: block;
  margin: 0 auto;
}