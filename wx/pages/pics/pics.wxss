page {
  background: #eee;
}

.pics-container {
  padding: 0 25rpx 25rpx;
}

.pics-block {
  position: relative;
  margin-top: 35rpx;
  padding: 0 0 25rpx;
  font-size: 0;
  background: #fff;
}

.pics-img {
  width: 100%;
  height: 466.66rpx;
}

.pics-num {
  position: absolute;
  top: 20rpx;
  right: -5rpx;
  padding: 8rpx 18rpx;
  height: 34rpx;
  line-height: 34rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 30rpx;
}

.pics-title {
  display: block;
  margin: 15rpx 15rpx 0;
  max-height: 80rpx;
  line-height: 40rpx;
  font-size: 35rpx;
  overflow: hidden;
}